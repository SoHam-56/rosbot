<?xml version="1.0"?>
<robot xmlns:xacro = "http://www.ros.org/wiki/xacro">
	<xacro:include filename = "inertial_macros.xacro" />

	<material name = "white"> <color rgba = "1 1 1 1"/> </material>
	<material name = "orange"> <color rgba = "1 0.3 0.1 1"/> </material>
	<material name = "blue"> <color rgba = "0.2 0.2 1 1"/> </material>
	<material name = "black"> <color rgba = "0 0 0 1"/> </material>
	<material name = "red"> <color rgba = "1 0 0 1"/> </material>

	<!-- BASE LINK DECLARATION --> 
	<link name = "base_link" />

	<!-- CHASSIS MODELING -->
	<joint name = "chassis_joint" type="fixed">
		<parent link = "base_link"/>
		<child link = "chassis"/>
		<origin xyz = "-0.1 0 0"/>
	</joint>

	<link name = "chassis">
		<visual>
			<origin xyz = "0.115 0 0.045" rpy = "0 0 0"/>
			<geometry>
				<box size = "0.23 0.11 0.09"/>
			</geometry>
			<material name = "white"/>
		</visual>

		<collision>
			<origin xyz = "0.115 0 0.045" rpy="0 0 0"/>
			<geometry>
				<box size = "0.23 0.11 0.09"/>
			</geometry>
			<material name = "white"/>
		</collision>

		<xacro:inertial_box mass = "0.75" x = "0.23" y = "0.11" z = "0.09">
			<origin xyz = "0.115 0 0.045" rpy = "0 0 0"/>
		</xacro:inertial_box>
	</link>

	<gazebo reference="chassis">
		<material>Gazebo/White</material>
	</gazebo>


	<!-- LEFT WHEELS -->
	<joint name = "left_wheel_front_joint" type = "continuous">
		<parent link = "base_link"/>
		<child link = "left_wheel_front"/>
		<origin xyz = "0.095 0.0625 0" rpy = "-${pi/2} 0 0"/>
		<axis xyz = "0 0 1"/>
	</joint>

	<link name = "left_wheel_front">
		<visual>
			<geometry>
				<cylinder length = "0.015" radius = "0.03" />
			</geometry>
			<material name = "blue"/>
		</visual>

		<collision>
			<geometry>
				<cylinder length = "0.015" radius = "0.03" />
			</geometry>
		</collision>

		<xacro:inertial_cylinder mass = "0.1" length = "0.015" radius = "0.03">
			<origin xyz = "0 0 0" rpy = "0 0 0"/>
		</xacro:inertial_cylinder>
	</link>

	<gazebo reference="left_wheel_front">
		<material>Gazebo/Blue</material>
	</gazebo>


	<joint name="left_wheel_back_joint" type="continuous">
		<parent link="base_link"/>
		<child link="left_wheel_back"/>
		<origin xyz="-0.065 0.0625 0" rpy="-${pi/2} 0 0"/>
		<axis xyz="0 0 1"/>
	</joint>

	<link name="left_wheel_back">
		<visual>
			<geometry>
				<cylinder length = "0.015" radius = "0.03" />
			</geometry>
			<material name="blue"/>
		</visual>

		<collision>
			<geometry>
				<cylinder length = "0.015" radius = "0.03" />
			</geometry>
		</collision>

		<xacro:inertial_cylinder mass = "0.1" length = "0.015" radius = "0.03">
			<origin xyz = "0 0 0" rpy = "0 0 0"/>
		</xacro:inertial_cylinder>
	</link>

	<gazebo reference="left_wheel_back">
		<material>Gazebo/Blue</material>
	</gazebo>




	<!-- RIGHT WHEELS -->
	<joint name = "right_wheel_front_joint" type = "continuous">
		<parent link = "base_link"/>
		<child link = "right_wheel_front"/>
		<origin xyz = "0.095 -0.0625 0" rpy = "${pi/2} 0 0"/>
		<axis xyz = "0 0 -1"/>
	</joint>

	<link name="right_wheel_front">
		<visual>
			<geometry>
				<cylinder length = "0.015" radius="0.03" />
			</geometry>
			<material name="blue"/>
		</visual>

		<collision>
			<geometry>
				<cylinder length = "0.015" radius="0.03" />
			</geometry>
		</collision>

		<xacro:inertial_cylinder mass = "0.1" length = "0.015" radius = "0.03">
			<origin xyz = "0 0 0" rpy = "0 0 0"/>
		</xacro:inertial_cylinder>
	</link>

	<gazebo reference="right_wheel_front">
		<material>Gazebo/Blue</material>
	</gazebo>


	<joint name="right_wheel_back_joint" type="continuous">
		<parent link="base_link"/>
		<child link="right_wheel_back"/>
		<origin xyz="-0.065 -0.0625 0" rpy="${pi/2} 0 0"/>
		<axis xyz="0 0 -1"/>
	</joint>

	<link name="right_wheel_back">
		<visual>
			<geometry>
				<cylinder length = "0.015" radius = "0.03" />
			</geometry>
			<material name="blue"/>
		</visual>

		<collision>
			<geometry>
				<cylinder length = "0.015" radius = "0.03" />
			</geometry>
		</collision>

		<xacro:inertial_cylinder mass = "0.1" length = "0.015" radius = "0.03">
			<origin xyz = "0 0 0" rpy = "0 0 0"/>
		</xacro:inertial_cylinder>
	</link>

	<gazebo reference="right_wheel_back">
		<material>Gazebo/Blue</material>
	</gazebo>

</robot>